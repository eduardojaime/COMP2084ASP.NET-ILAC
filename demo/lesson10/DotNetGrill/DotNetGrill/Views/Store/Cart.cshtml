@model IEnumerable<DotNetGrill.Models.Cart>

@{
    ViewData["Title"] = "Cart";
}

<h1>Your Cart</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                Photo
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @if (!String.IsNullOrEmpty(item.Product.Photo))
                    {
                        <img src="~/imgs/products/@item.Product.Photo" alt="Product Image"
                             style="max-width:100px" class="img-thumbnail" />
                    }
                </td>
                <td class="text-right">
                    @item.Price.ToString("C")
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    <a asp-action="RemoveFromCart" asp-route-id="@item.CartId">Delete</a>
                </td>
            </tr>
        }
        <tr>
            <td colspan="2"></td>
            <td>
                @ViewBag.TotalAmount
            </td>
            <td colspan="2"></td>
        </tr>
    </tbody>
</table>
<div class="col-12 mb-auto text-info">
    <a class="btn btn-primary" asp-action="Index">Continue Shopping</a>
    <a class="btn btn-success" asp-action="Checkout">Checkout</a>
</div>